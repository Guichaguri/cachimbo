{
  "name": "cachimbo",
  "version": "0.0.2",
  "author": "Guilherme Chaguri",
  "license": "Apache-2.0",
  "description": "An advanced caching library that allows you to layer different strategies in order to maximize the performance.",
  "repository": {
    "type": "git",
    "url": "git://github.com/Guichaguri/cachimbo.git"
  },
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "test": "vitest",
    "coverage": "vitest run --coverage --coverage.include=src/**/*.ts",
    "prepack": "tsdown",

    "sample:no-cache": "tsx ./tests/samples/1-no-cache.ts",
    "sample:redis-cache": "tsx ./tests/samples/2-redis-cache.ts",
    "sample:ttl-cache": "tsx ./tests/samples/3-ttl-cache.ts",
    "sample:coalescing-redis-cache": "tsx ./tests/samples/4-coalescing-redis-cache.ts",
    "sample:swr-ttl-cache": "tsx ./tests/samples/5-swr-ttl-cache.ts",
    "sample:tiered-ttl-redis-cache": "tsx ./tests/samples/6-tiered-ttl-redis-cache.ts"
  },
  "keywords": [
    "cache",
    "caching",
    "redis",
    "memcache",
    "memcached",
    "valkey",
    "elasticache",
    "stale-while-revalidate",
    "request-coalescing",
    "tiered-cache",
    "multi-layer-cache",
    "ttl",
    "lru",
    "kv",
    "keyv"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "require": {
        "default": "./dist/index.cjs",
        "types": "./dist/index.d.cts"
      }
    }
  },
  "dependencies": {
    "@isaacs/ttlcache": "^2.1.2",
    "lru-cache": "^11.2.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251127.0",
    "@redis/client": "^5.10.0",
    "@types/memjs": "^1.3.3",
    "@types/node": "^24.10.1",
    "@valkey/valkey-glide": "^2.2.1",
    "@vitest/coverage-v8": "^4.0.15",
    "ioredis": "^5.8.2",
    "iovalkey": "^0.3.3",
    "keyv": "^5.5.5",
    "memcache": "^1.0.0",
    "tsdown": "^0.17.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
